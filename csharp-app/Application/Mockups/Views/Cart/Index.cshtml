@model Mockups.Models.Cart.CartIndexViewModel
@{
    ViewData["Title"] = "Корзина";
}

<div class="row">
    <div class="col-12">
        <h1>Товары в корзине</h1>
        @if (!Model.Items.Any())
        {
            <h4>Ваша корзина пуста.</h4>
        }
        else
        {
            <ol class="list-group list-group-numbered">
                @foreach (var item in Model.Items)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">@item.Name<span class="badge bg-primary rounded-pill ms-3">@item.Amount</span></div>
                        </div>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Cart" asp-route-id="@item.Id">Удалить</a>
                    </li>
                }
            </ol>
        }
    </div>
</div>