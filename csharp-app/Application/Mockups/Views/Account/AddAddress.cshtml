@model Mockups.Models.Account.AddAddressViewModel
<div class="card mb-2">
    <div class="card-header">
        Добавить адрес
    </div>
    <div>
        <form asp-action="AddAddress" asp-controller="Account" method="POST">
            <div class="card-body">
                <div class="form-row">
                    <div class="form-group col">
                        <label for="#nameInput">Название</label>
                        <input type="text" class="form-control" id="nameInput" asp-for=Name required>
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col">
                        <label for="#streetInput">Улица</label>
                        <input type="text" class="form-control" id="streetInput" asp-for=StreetName required>
                        <span class="text-danger" asp-validation-for="StreetName"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col">
                        <label for="#houseNumberInput">Дом</label>
                        <input type="text" class="form-control" id="houseNumberInput" asp-for=HouseNumber required>
                        <span class="text-danger" asp-validation-for="HouseNumber"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col">
                        <label for="#entranceNumberInput">Подъезд</label>
                        <input type="text" class="form-control" id="entranceNumberInput" asp-for=EntranceNumber>
                        <span class="text-danger" asp-validation-for="EntranceNumber"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col">
                        <label for="#flatNumberInput">Квартира</label>
                        <input type="text" class="form-control" id="flatNumberInput" asp-for=FlatNumber required>
                        <span class="text-danger" asp-validation-for="FlatNumber"></span>
                    </div>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="flexCheckChecked" checked asp-for=IsMainAddress>
                    <label class="form-check-label" for="flexCheckChecked">Сделать основным адресом</label>
                </div>
                <div class="form-row">
                    <div class="form-group col">
                        <label for="#noteInput">Приметчание</label>
                        <input type="text" class="form-control" id="nameInput" asp-for=Note>
                        <span class="text-danger" asp-validation-for="Note"></span>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-success">Создать</button>
                <a class="btn btn-secondary" asp-action="Index" asp-controller="Account">Отмена</a>
            </div>
        </form>
    </div>
</div>
